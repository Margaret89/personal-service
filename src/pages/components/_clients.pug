section.projects-wrap.mt-indent
	.container
		.row
			.col-12
				.projects-wrap__top
					h2 Клиенты

					.slider-arr-list
						.swiper-button-prev.slider-arr.js-projects-slider-prev
							+svg('ic-arrow-left','ic-arrow-left', '27', '50')
						
						.swiper-button-next.slider-arr.js-projects-slider-next
							+svg('ic-arrow-right','ic-arrow-right', '27', '50')

				ul.tags
					-
						var list=[
							{text:'все'},
							{text:'бизнес-центры', status:'active'},
							{text:'гостиницы'},
							{text:'жилые комплексы'},
							{text:'парки'},
							{text:'дворовые территории'},
						]
					each item in list
						li.tags__item(class=item.status?' active':'')
							a(href="#").tags__link= item.text

