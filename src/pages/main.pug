extends tmpl/_layout

block vars
	- var pageId = 'main'

block body
	section.top-block.mb-indent
		.st-width
			.top-block__wrap
				.container
					.row
						.col-12
							.top-block__content
								.top-block__title
									h1 Персонал и&nbsp;сервис под ключ

								.top-block__info
									p Клининг для бизнеса: опытный персонал без текучек с ежедневной гарантией результата

									ul.list-color
										li Опытный персонал без текучек
										li С ежедневной гарантией результата

							form.form-line
								.form-line__content
									.form-line__field
										select.js-select
											option(value="") Тип объекта
											option(value="flat") Квартира
											option(value="hous") Дом

									.form-line__field
										input(type="text", name="area", placeholder="Площадь, m2")

									.form-line__field
										input.js-phone(type="text", name="phone", placeholder="+7 (999) 455 75 94")

									button(type="submit").btn заказать звонок

								.form-line__note
									+svg('ic-clock','ic-clock', '21', '21')
									|Свяжемся с вами в течение 10 минут

	section.services-block-wrap.m-indent
		.container
			.row
				.col-12
					.h4 Услуги
					h2 Клининг 
						span.d-none.d-md-inline для бизнеса

					ul.tags
						-
							var list=[
								{text:'все', status:'active'},
								{text:'регулярная уборка'},
								{text:'объекты'},
								{text:'мытьё и фасады'},
								{text:'химчистка и мебель'},
								{text:'Территория'},
							]
						each item in list
							li.tags__item(class=item.status?' active':'')
								a(href="#").tags__link= item.text

		.container
			.row
				.col-12
					.services-block-list
						-
							var list=[
								{img:'service.jpg', title:'Комплексное обслуживание мест общего пользования', text:'Регулярная уборка и поддержание чистоты в холлах, лифтах, коридорах и других общих зонах.'},
								{img:'service.jpg', title:'Комплексное обслуживание', text:'Регулярная уборка и поддержание чистоты в холлах.'},
								{img:'service.jpg', title:'Комплексное обслуживание мест общего пользования', text:'Регулярная уборка и поддержание чистоты в холлах, лифтах, коридорах и других общих зонах.'},
								{img:'service.jpg', title:'Комплексное обслуживание мест общего пользования', text:'Регулярная уборка и поддержание чистоты в холлах, лифтах, коридорах и других общих зонах.'},
								{img:'service.jpg', title:'Комплексное обслуживание мест общего пользования', text:'Регулярная уборка и поддержание чистоты в холлах, лифтах, коридорах и других общих зонах.'},
